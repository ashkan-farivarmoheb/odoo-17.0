<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_delivery_carrier_form_inherit_auspost_credntial" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.auspost</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_details']/field[last()]" position="after">
                <field name="is_automatic_shipment_mail" string="Automatic Send Shipment Mail"/>
                <field name="mail_template_id" string="E-mail Template" readonly="1" invisible="not is_automatic_shipment_mail" required="is_automatic_shipment_mail" />
                <field name="tracking_link" widget="url" invisible="not is_automatic_shipment_mail" required="is_automatic_shipment_mail"/>
                <field name="is_zip_required" string="Is Zip Required?" invisible="1"/>
            </xpath>

            <xpath expr="//notebook/page[@name='destination']" position="before">
                <page name="auspost_credentials" string="AusPost Credentials" invisible="delivery_type!='auspost'">
                    <group col="2">
                        <group>
                            <field name="australia_post_account_number" required="True"/>
                            <field name="australia_post_api_key" required="True"/>
                            <field name="australia_post_api_password" required="True" password="True"/>

                            <!-- <field name="australia_post_environment"/> -->
                        </group>
                        <group invisible="not australia_post_account_number">
                            <button name="australia_post_get_account_info" string="Get Account Info" type="object" class="oe_highlight"/>
                        </group>
                    </group>

                </page>
            </xpath>
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Batch Configuration" name="batch_configuration" invisible="delivery_type in ['fixed','base_on_rule']">
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="auto_create_batch" invisible="delivery_type in ['fixed','base_on_rule']"/>
                            <field name="batch_limit" invisible="not auto_create_batch"/>
                            <field name="auto_done_pickings" invisible="not auto_create_batch"/>
                            <field name="use_existing_batch_cronjob"/>
                        </group>
                    </group>
                </page>
            </xpath>


        </field>
    </record>
</odoo>

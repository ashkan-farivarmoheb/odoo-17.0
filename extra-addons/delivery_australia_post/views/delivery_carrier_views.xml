<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_delivery_carrier_form_inherit_auspost_credntial" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.auspost</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_details']/field[last()]" position="after">
                <field name="is_automatic_shipment_mail" string="Automatic Send Shipment Mail"/>
                <field name="mail_template_id" string="E-mail Template" invisible="not is_automatic_shipment_mail" required="is_automatic_shipment_mail"/>
                <field name="tracking_link" widget="url" invisible="not is_automatic_shipment_mail" required="is_automatic_shipment_mail"/>
                <field name="is_zip_required" string="Is Zip Required?" invisible="1"/>
            </xpath>

            <xpath expr="//notebook/page[@name='custom_carrier_tab']" position="inside">
                <group col="2">
                    <group string="Australia Post Credentials">
                        <field name="australia_post_account_number" required="True"/>
                        <field name="australia_post_api_key" required="True"/>
                        <field name="australia_post_api_password" required="True" password="True"/>
                        <div colspan="2" invisible="not australia_post_account_number">
                            <button name="australia_post_get_account_info" string="Select a service linked to your auspost account" type="object" class="oe_inline fa fa-arrow-right oe_link"/>
                        </div>
                        <div colspan="2" class="alert alert-warning" invisible="service_product_id" role="status">
                            <p class="mb-0">
                                <i class="fa fa-exclamation-triangle"/>
                                Do not forget to select a service for a valid configuration.</p>
                        </div>
                    </group>
                    <group name="auspost_shipping_information" string="Australia Post Shipping Information">
                        <field name="service_product_id"/>
                        <field name="service_group"/>
                        <field name="service_type"/>
                    </group>

                </group>
                <!-- <group invisible="not australia_post_account_number">
                    <button name="australia_post_get_account_info" string="Get Account Info" type="object" class="oe_highlight"/>
                </group> -->

            </xpath>



        </field>
    </record>
</odoo>

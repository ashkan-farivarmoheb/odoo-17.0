<odoo>
    <data>
        <record id="view_stock_picking_batch_button" model="ir.ui.view">
            <field name="name">Stock Picking Batch</field>
            <field name="model">stock.picking.batch</field>
            <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
            <field name="arch" type="xml">
                <xpath expr="//header/button[last()]" position="after">
                    <field name="ready_for_download" invisible="1" />
                    <button name="download_delivery_slip" string="Download Delivery Slip" type="object" class="oe_highlight" invisible="not ready_for_download" />
                    <button name="download_invoices" string="Download Invoices" type="object" class="oe_highlight" invisible="not ready_for_download" />
                </xpath>
                <xpath expr="//group/field[@name='company_id']" position="after">

                    <field name="carrier_id" options='{"no_create": 1, "no_create_edit": 1}'></field>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
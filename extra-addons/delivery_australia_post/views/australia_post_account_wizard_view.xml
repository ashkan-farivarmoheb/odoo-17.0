<?xml version="1.0"?>
<odoo>

    <record id="view_australia_post_account_info_wizard_form" model="ir.ui.view">
        <field name="name">australia.post.account.info.wizard.form</field>
        <field name="model">australia.post.account.info.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Information">
                <!-- Use the col attribute to specify two columns -->
                <group col="2">
                    <group >
                        <field name="title"/>
                        <field name="name"/>
                    </group>
                    <group >
                        <field name="valid_from"/>
                        <field name="account_number"/>
                        <field name="valid_to"/>
                    </group>
                </group>
                <field name="table_ids">
                    <tree editable="false">
                        <field name="type"/>
                        <field name="product_id"/>
                        <field name="group" />
                        <field name="carrier"/>
                        <button name="add_new_shipping_service" string="Use Service" type="object" icon="fa-plus-square" context="{'hide_field':1}" groups="sales_team.group_sale_manager"/>

                    </tree>
                </field>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

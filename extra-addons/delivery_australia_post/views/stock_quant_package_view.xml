<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_quant_package_form" model="ir.ui.view">
    <field name="name">stock.quant.package.form</field>
    <field name="model">stock.quant.package</field>
    <field name="inherit_id" ref="stock.view_quant_package_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header/button[last()]" >
        <button type="object" name="open_website_url" class="oe_stat_button" icon='fa-truck' string="Tracking" />

      </xpath>

      <xpath expr="//group[1]/group[@name='amount']" position="inside">
        <field name='tracking_no'/>
      </xpath>
      <xpath expr="//field[@name='pack_date']" position="after">
        <field name='order_id' invisible="not order_id" readonly='True'/>
      </xpath>
     
    </field>
  </record>

</odoo>

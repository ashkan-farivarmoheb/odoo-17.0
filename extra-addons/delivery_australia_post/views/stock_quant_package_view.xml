<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_quant_package_form" model="ir.ui.view">
    <field name="name">stock.quant.package.form</field>
    <field name="model">stock.quant.package</field>
    <field name="inherit_id" ref="stock.view_quant_package_form" />
    <field name="arch" type="xml">
      <xpath expr="//header/button[@name='unpack']" position="after">
        <button type="object" name="open_website_url" class="oe_stat_button" icon='fa-truck' string="Tracking" invisible="not tracking_no" />
      </xpath>

      <xpath expr="//group[1]/group[@name='amount']" position="inside">


        <field name='tracking_no' readonly='True' />
        <button type="object" class="oi oi-arrow-right oe_link" confirm="Cancelling a delivery may not be undoable. Are you sure you want to continue?" name="cancel_item" string="Cancel" invisible="not tracking_no" />

      </xpath>
      <xpath expr="//field[@name='pack_date']" position="after">
        <field name='order_id' invisible="not order_id" readonly='True' />
        <field name='picking_id' invisible="True" readonly='True' />
        <field name="authority_leave" invisible="not picking_id.carrier_id and not picking_id.carrier_id.delivery_type in ('auspost')"/>
        <field name="allow_part_delivery" invisible="not picking_id.carrier_id and not picking_id.carrier_id.delivery_type in ('auspost')"/>
      </xpath>
    </field>
  </record>

</odoo>
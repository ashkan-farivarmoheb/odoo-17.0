<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="type_effect_title" inherit_id="website.snippets" name="type effect title">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_silon.type_effect_title_snippet"
               t-thumbnail="/website/static/src/img/snippets_thumbs/s_title.svg"
            />
        </xpath>
    </template>
    <template id="type_effect_title_snippet" name="type effect title">
        <section class="s_title type_effect_title pt40 pb40">
            <div class="s_allow_columns container">
                <div class="row">
                    <h2 class="autotyping">
                        We <em class="o_default_snippet_text">Simplify</em> Odoo
                        <br/>
                        <span class="typing_text">Go</span>
                    </h2>
                </div>

                <script type="text/javascript" class="o_default_snippet_text">
                    document.addEventListener('DOMContentLoaded', function () {
                    var typed = new Typed(".typing_text", {
                    strings: [
                    "Implementation",
                    "Go-Live and Adoption",
                    "Training",
                    "Customisation",
                    "Migration",
                    "Integration",
                    "Optimisation",
                    "Configuration",
                    "Scoping and Licensing"
                    ],
                    typeSpeed: 80,
                    backSpeed: 40,
                    loop: true,
                    cursorChar: '_Ô∏è',
                    });
                    });
                </script>

                <style class="o_default_snippet_text">
                    .autotyping {
                    font-size: 55px;
                    font-weight: 600;
                    line-height: 1.2; /* Adjust line height as needed */
                    min-height: 120px; /* Set a minimum height to prevent layout shift */
                    }
                    .typing_text {
                    color: var(--o-color-6); /* Using Odoo's theme color variable */
                    display: inline-block;
                    font-size: 55px;
                    font-weight: 600;
                    }
                </style>
            </div>

        </section>
    </template>


</odoo>
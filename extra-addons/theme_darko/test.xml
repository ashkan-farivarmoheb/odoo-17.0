      <template id="video_tab" inherit_id="website.snippets" name="Video Tab">
                <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
                    <t t-snippet="theme_darko.video_tab_snippet"
                       t-thumbnail="/website/static/src/img/snippets_thumbs/s_three_columns.svg"/>
                </xpath>
            </template>

            <template id="video_tab_snippet" name="Video Tab">
                <section class="video_tab pt-md-5">
                    <div class="container">
                        <!-- Titles Column -->
                        <div class="titles">
                            <t t-foreach="[{'title':'Design without limits','video_url':'https://dhygzobemt712.cloudfront.net/Web/home/2024-wxp/features/design.mp4','description':'This is a short description for the first feature tab.This is a short description for the first feature tab.This is a short description for the first feature tab'},
                            {'title':'Create complex, rich interactions','video_url':'https://dhygzobemt712.cloudfront.net/Web/home/2024-wxp/features/build-on-brand-sites.mp4','description':'Here is a description for the second tab that showcases rich interactions.This is a short description for the first feature tab.This is a short description for the first feature tab.'}]"
                               t-as="video">
                                <div class="title-item" t-att-data-video="video['video_url']"
                                     t-att-data-description="video['description']">
                                    <div class="progress-bar-wrapper">
                                        <div class="progress-bar"></div>
                                    </div>
                                    <span t-esc="video['title']"></span>
                                    <p class="description" t-esc="video['description']"></p>
                                </div>
                            </t>
                        </div>
                        <!-- Video and Description Column -->
                        <div class="video">
                            <video id="feature-video" preload="none">
                                <source id="video-source" t-att-src="''" type="video/mp4"/>
                            </video>
                            <p id="video-description"></p>
                        </div>
                    </div>
                </section>
            </template>
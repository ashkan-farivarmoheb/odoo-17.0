<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  For darko configuration model  -->
    <record id="darko_configuration_action" model="ir.actions.act_window">
        <field name="name">Darko Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">darko.configuration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="darko_configuration_tree" model="ir.ui.view">
        <field name="name">darko.configuration.tree</field>
        <field name="model">darko.configuration</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="darko_configuration_form" model="ir.ui.view">
        <field name="name">darko.configuration.form</field>
        <field name="model">darko.configuration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name" invisible="1"/>
                    <group>
                        <group string="Featured Products">
                            <field name="featured_product_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="darko_configuration_menu"
              name="Darko Configuration"
              parent="website.menu_website_global_configuration"
              sequence="160"
              action="darko_configuration_action"/>
</odoo>

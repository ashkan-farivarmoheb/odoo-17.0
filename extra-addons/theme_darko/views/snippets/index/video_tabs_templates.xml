<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="video_tabs" inherit_id="website.snippets" name="video tabs">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_darko.video_tabs_snippet"
               t-thumbnail="/website/static/src/img/snippets_thumbs/s_three_columns.svg"/>
        </xpath>
    </template>

    <template id="video_tabs_snippet" name="Video Tabs">
        <section class="feature-tabs video_tabs_section" data-name="Feature Tabs">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 row justify-content-between o_colored_level">


                        <p class="h5">Rethink the web dev cycle with Webflow. Give your design and
                            marketing teams the power to launch sophisticated sites quickly â€” so your dev team can
                            focus on more complex work, not pixel-perfect revisions.
                        </p>


                        <!-- Titles Column -->
                        <div class="feature-titles">

                            <t t-foreach="[{'title':'Design without limits','video_cta_href':'/odoo-implementation','video_url':'https://dhygzobemt712.cloudfront.net/Web/home/2024-wxp/features/design.mp4','description':'This is a short description for the first feature tab.This is a short description for the first feature tab.This is a short description for the first feature tab'},
                            {'title':'Create complex, rich interactions','video_cta_href':'/odoo-erp','video_url':'https://dhygzobemt712.cloudfront.net/Web/home/2024-wxp/features/build-on-brand-sites.mp4','description':'Here is a description for the second tab that showcases rich interactions.This is a short description for the first feature tab.This is a short description for the first feature tab.'}]"
                               t-as="video">
                                <div class="title-item"
                                     t-att-data-video="video['video_url']"
                                     t-att-data-description="video['description']"
                                     t-att-data-video_cta_href="video['video_cta_href']"
                                     style="--progress: 0%;">
                                    <span class="h3" t-esc="video['title']"></span>
                                    <p class="description" t-esc="video['description']">
                                    </p>
                                </div>

                            </t>

                        </div>
                    </div>
                    <!-- Video Column -->
                    <div class="col-lg-6 feature-video">
                        <video id="feature-video" controls="controls" preload="none" class="w-100">
                            <source id="video-source" src="" type="video/mp4"/>
                        </video>
                        <!--                        <p id="video-cta" class="mt-3"></p>-->
                        <a id="video-cta" class="btn btn-link learn-more-btn px-1" href=""
                           data-bs-original-title="" title="">Learn More
                            <span class="material-icons arrow-icon">arrow_right_alt</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
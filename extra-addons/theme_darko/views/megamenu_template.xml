                                <div class="my-3">
                                    <a href="/industries-ecommerce" class="link-with-image">
                                        <span class="link-text">Retail &amp; Ecommerce</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto o_anim_fade_in o_animate o_anim_from_top o_animate_in_dropdown"
                                 style="visibility: visible;">
                                <div class="my-3">
                                    <a href="/industries-construction" class="link-with-image">
                                        <span class="link-text">Construction</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto o_anim_fade_in o_animate o_anim_from_top o_animate_in_dropdown"
                                 style="visibility: visible;">
                                <div class="my-3">
                                    <a href="/industries-professional-services" class="link-with-image">
                                        <span class="link-text">Professional Services</span>
                                    </a>
                                </div>

                            </div>
                            <div class="col-auto o_anim_fade_in o_animate o_anim_from_top o_animate_in_dropdown"
                                 style="visibility: visible;">
                                <div class="my-3">
                                    <a href="/industries-public-sector" class="link-with-image">
                                        <span class="link-text">Public Sector</span>
                                    </a>
                                </div>
                            </div>

                        </div>


                    </div>
                </section>
            </field>
        </record>


